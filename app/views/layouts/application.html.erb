<!DOCTYPE html>
<html>
  <head>
    <title><div class="logo-top" style="background-image:url(<%= asset_path "logo.top.png" %>)" /></div>Asigaya</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/b842afdc94.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_path%> <%= controller.action_name%>">
    <%= render "layouts/header" %>
    
    <%= yield %>
    
    <%= render "layouts/footer" %>
  </body>
</html>
