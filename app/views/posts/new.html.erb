<h1>新規投稿ページ</h1>

<%= form_for(@post, url: post_create_path) do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :content,size: "50x10" %>

    <h4>場所</h4>
    <%= f.text_field :address %></br>
    
    <h4>写真</h4>
    <%= f.attachment_field :image %>

    <div class='field'>
        <%= f.label :tag_list %>
        <%= f.text_field :tag_list %>
    </div>

    <%= f.submit '投稿する',class: "btn btn-default" %>
    
<% end %>
