<div class="favorite-link" id="favorite-link-<%= post.id %>">
	<% if current_user %>
		<% if current_user.favorites.find_by(post_id: post.id) %>
			<%= link_to unfavorite_path(post.id), method: :delete, remote: true do %>
			<div class = "iine__button">❤<%= post.favorites.count %></div>
			<% end %>
		<% else %>
			<%= link_to favorite_path(post.id), method: :post, remote: true do %>
			<div class = "iine__button">♡<%= post.favorites.count %></div>
			<% end %>
		<% end %>
	<% end %>
</div>
