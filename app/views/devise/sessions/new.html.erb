<div class="sign">
   <div class="row">
  <div class="col-md-4 col-md-offset-4">

<h2>ログインページ</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "xxx@xxx" , class:"devise_form" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"devise_form" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを保存する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする", class: "sign-button btn btn-default btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>